#!/usr/bin/env bash
set -e

# check ASDF environment variables
[ -n "$ASDF_INSTALL_VERSION" ] || (echo 'Missing ASDF_INSTALL_VERSION' >&2 && exit 1)
[ -n "$ASDF_DOWNLOAD_PATH" ] || (echo 'Missing ASDF_DOWNLOAD_PATH' >&2 && exit 1)

case "$(uname -s)" in
	"Darwin")
		DOWNLOAD_URL="https://github.com/returntocorp/semgrep/releases/download/v${ASDF_INSTALL_VERSION}/semgrep-${ASDF_INSTALL_VERSION}-osx.zip"
		curl -fL -o "${ASDF_DOWNLOAD_PATH}/semgrep.zip" "${DOWNLOAD_URL}"
		;;
	"Linux")
		DOWNLOAD_URL="https://github.com/returntocorp/semgrep/releases/download/v${ASDF_INSTALL_VERSION}/semgrep-${ASDF_INSTALL_VERSION}ubuntu-16.04.tgz"
		curl -fL -o "${ASDF_DOWNLOAD_PATH}/semgrep.tgz" "${DOWNLOAD_URL}"
		;;
esac
